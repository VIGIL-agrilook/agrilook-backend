
# 환경변수 설정 예시
# 실제 사용시 .env 파일에 복사해서 값을 입력하세요

# 공공데이터포털 API 키 (필수)
# https://www.data.go.kr/에서 농업기술실용화재단_비료·퇴비 정보 API 신청
PUBLIC_DATA_API_KEY=your_public_data_api_key_here
FERTILIZER_API_KEY=your_public_data_api_key_here

# OpenAI API 키 (챗봇 기능용)
# https://platform.openai.com/에서 API 키 발급
OPENAI_API_KEY=your_openai_api_key_here

# Flask 설정
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000

# 기타 설정 (옵션)
BASE_URL=http://localhost:5000
ADOTX_API_KEY=your_adotx_api_key_here
